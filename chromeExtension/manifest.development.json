{
  "name": "Upscale (Dev)",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Make recipes easier to follow",
  "background": {
    "scripts": ["src/loadBackgroundScript.js", "lib/development/hotReload.js"]
  },
  "permissions": ["tabs", "activeTab"],
  "browser_action": {
    "default_title": "Upscale (Dev)"
  },
  "web_accessible_resources": ["src/*"],
  "icons": {
    "16": "images/development/icon16.png",
    "48": "images/development/icon48.png",
    "128": "images/development/icon128.png"
  }
}
