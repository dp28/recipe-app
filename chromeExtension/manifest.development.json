{
  "name": "Upscale (Dev)",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Extracts recipes from web pages",
  "background": {
    "scripts": ["src/loadBackgroundScript.js", "lib/dev/hotReload.js"]
  },
  "permissions": ["tabs", "http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/loadContentScript.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_title": "Upscale (Dev)"
  },
  "web_accessible_resources": ["src/*"],
  "icons": {
    "16": "images/development/icon16.png",
    "48": "images/development/icon48.png",
    "128": "images/development/icon128.png"
  }
}
