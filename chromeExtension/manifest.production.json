{
  "name": "Upscale",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Extracts recipes from web pages",
  "background": {
    "scripts": ["src/loadBackgroundScript.js"]
  },
  "permissions": ["tabs", "http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/loadContentScript.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_title": "Upscale"
  },
  "web_accessible_resources": ["src/*"],
  "icons": {
    "16": "images/production/icon16.png",
    "48": "images/production/icon48.png",
    "128": "images/production/icon128.png"
  }
}
