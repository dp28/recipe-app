{
  "name": "Upscale",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Extracts recipes from web pages",
  "background": {
    "scripts": ["src/loadBackgroundScript.js", "lib/dev/hotReload.js"]
  },
  "permissions": ["tabs", "http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/loadContentScript.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_title": "Upscale"
  },
  "web_accessible_resources": ["src/*"],
  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" }
}
